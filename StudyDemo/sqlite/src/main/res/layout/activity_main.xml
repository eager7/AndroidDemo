<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Hello World!" android:layout_width="wrap_content"
        android:id="@+id/textview_hello" android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_new"
        android:text="new"
        android:onClick="onClickNew"
        android:layout_below="@+id/textview_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_update"
        android:text="update"
        android:onClick="onClickUpdate"
        android:layout_below="@+id/button_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_add"
        android:text="add"
        android:onClick="onClickAdd"
        android:layout_below="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_query"
        android:text="query"
        android:onClick="onClickQuery"
        android:layout_below="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
